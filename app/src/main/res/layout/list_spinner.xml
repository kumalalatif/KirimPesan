<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/gambarCardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mala" />

    <TextView
        android:id="@+id/namaCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/gambarCardView"
        android:text="Nama"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pesanCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaCardView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/gambarCardView"
        android:text="pesan" />

    <TextView
        android:id="@+id/tanggalCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="tanggal" />
</RelativeLayout>